<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_shalou"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/img_time2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <!-- android:listSelector="@android:color/transparent" 可去除ListView点击颜色效果-->
        <ListView
            android:id="@+id/list_sleep_time"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"></ListView>

        <ImageButton
            android:id="@+id/btn_add_clock"
            style="@style/BtnAdd" />
    </LinearLayout>
</LinearLayout>