<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical">

   <RadioGroup
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <RadioButton
           android:id="@+id/btn_hi_wanan"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:button="@null"
           android:drawableLeft="@drawable/voice"
           android:text="@string/hiwanan"
           android:textSize="20sp"
           android:paddingLeft="10dp"
           android:drawableRight="@drawable/ic_chevron_right_black_24dp"
           android:paddingRight="10dp"
           android:gravity="center_vertical"
           android:drawablePadding="20dp"
           android:background="@drawable/tab_pressed_btn_bg">
       </RadioButton>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#CFD8DC"
           android:layout_marginLeft="80dp"/>

       <RadioButton
           android:id="@+id/btn_collection_wanan"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:button="@null"
           android:drawableLeft="@drawable/voice"
           android:drawableRight="@drawable/ic_chevron_right_black_24dp"
           android:paddingRight="10dp"
           android:text="@string/wananji"
           android:textSize="20sp"
           android:paddingLeft="10dp"
           android:gravity="center_vertical"
           android:drawablePadding="20dp"
           android:background="@drawable/tab_pressed_btn_bg">
       </RadioButton>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#CFD8DC"
           android:layout_marginLeft="80dp"/>

       <RadioButton
           android:id="@+id/btn_help_sleep"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:button="@null"
           android:drawableLeft="@drawable/voice"
           android:drawableRight="@drawable/ic_chevron_right_black_24dp"
           android:paddingRight="10dp"
           android:text="@string/zhushuimian"
           android:textSize="20sp"
           android:paddingLeft="10dp"
           android:gravity="center_vertical"
           android:drawablePadding="20dp"
           android:background="@drawable/tab_pressed_btn_bg">
       </RadioButton>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#CFD8DC"
           android:layout_marginLeft="80dp"/>
   </RadioGroup>

</LinearLayout>