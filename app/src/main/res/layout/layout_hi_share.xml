<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_color"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/title_back" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_text_wanan"
            android:textColor="@color/title_text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_title_next"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="7dp"
            android:text="@string/btn_share"
            android:textColor="@color/title_text_color"
            android:textSize="18sp"
            android:background="@drawable/btn_bg_click"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_voice_text"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_text_share"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="false"
                android:maxLines="100"
                android:hint="@string/type_something"
                android:layout_margin="12dp"
                android:gravity="top"
                android:textColorHint="@color/hint_text_color"
                android:background="#ffffff"/>

            <GridView
                android:id="@+id/grid_view_share"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:numColumns="4"
                android:columnWidth="90dp"
                android:stretchMode="columnWidth"
                android:gravity="center">
            </GridView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>