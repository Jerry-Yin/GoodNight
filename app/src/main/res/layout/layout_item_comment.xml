<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="50"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.hdu.team.hiwanan.view.RoundImageView
            android:id="@id/img_user"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/demo_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/title_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year and Month"
                android:textColor="@color/test_color"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/corner_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/thumb_up" />

            <TextView
                android:id="@+id/txt_comment_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="123456" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        >
        <TextView
            android:id="@+id/txt_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reply"/>
        <TextView
            android:id="@+id/txt_main_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@color/blue"
            android:text="@string/user_demo"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txt_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comma"

            />
        <TextView
            android:id="@+id/txt_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="This is a comment demo. Hahaha!"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_sub_comment"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:background="@color/white_smoke"
        >

        <TextView
            android:id="@+id/txt_sub_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/user_demo"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/txt_signal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comma"
            />

        <TextView
            android:id="@+id/txt_last_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="This is sup Comment for testing." />
    </LinearLayout>

</LinearLayout>